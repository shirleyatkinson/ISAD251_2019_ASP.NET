@{
    ViewData["Title"] = "Home Page";
}

<style>
    body, html {
        height: 100%;
        font-family: "Inconsolata", sans-serif;
    }

    .bgimg {
        background-position: center;
        background-size: cover;
        background-image: url("~/img/SUShop.jpg");
        min-height: 35%;
    }
</style>

<header class="bgimg" id="home">
            <img src="~/img/SUShop.jpg"  />
        </header>

<div class="text-left mt-5 px-5">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="display-4">Welcome</h1>
            <p>
                This application is provided for you to alert the lecturer that you need help during the
                practical session.  You need to enter your name but this will only be shown to the lecturer.
                The view will show the module code, date, time, row number and seat number only.  No other
                details will be displayed to students
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1"><a asp-controller="Request" asp-action="Index" class="btn btn-info">Request</a></div>
        <div class="col-sm-1"><a class="btn btn-warning">View</a></div>
        <div class="col-sm-10"></div>
    </div>
</div>
